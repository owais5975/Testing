
@{
    /**/

    ViewBag.Title = "Home";
}

@if (TempData["Greet"] == "1")
{
    <div class="mt-4">
        <div class="alert alert-success alert-dismissible fade show my-3" role="alert">
            <h4 class="alert-heading">@Session["GreetMessage"] </h4>
            <p>Good to see you</p>
            <hr>
            <p class="mb-0">@DateTime.Now.ToShortDateString()</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

